<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
	app:cardCornerRadius="10dp"
	android:layout_marginTop="10dp"
	android:layout_marginBottom="2dp"
	android:layout_marginHorizontal="2dp"
	android:elevation="2dp">



	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="10dp"
		>

		<TextView
			android:id="@+id/tv_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:text="date. 1231544"
			android:textColor="#000000" />

		<TextView
			android:id="@+id/tv_test_no"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:text="Test - 123456"
			android:textColor="#000000" />

		<TextView
			android:id="@+id/tv_subject"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_test_no"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="5sp"
			android:text="Subject : Maths"
			android:textColor="#000000" />

		<TextView
			android:id="@+id/tv_topic"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_test_no"
			android:layout_alignParentRight="true"
			android:layout_marginTop="5sp"
			android:text="Integration"
			android:textColor="#000000" />

		<TextView
			android:id="@+id/tv_class"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_subject"
			android:layout_alignParentLeft="true"
			android:layout_marginTop="5sp"
			android:text="12th"
			android:textColor="#000000" />
		<TextView
			android:id="@+id/tv_marks"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_subject"
			android:layout_alignParentRight="true"
			android:layout_marginTop="5sp"
			android:text="100"
			android:textColor="#000000" />

	</RelativeLayout>

</androidx.cardview.widget.CardView>